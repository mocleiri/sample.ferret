<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    version="3.0">

    <display-name>ferret</display-name>

    <welcome-file-list>
        <welcome-file>simple</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>Ferret Servlet</servlet-name>
        <servlet-class>net.wasdev.samples.ferret.FerretServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Ferret Servlet</servlet-name>
        <url-pattern>/simple/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Ferret Servlet with SSL</servlet-name>
        <servlet-class>net.wasdev.samples.ferret.FerretServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Ferret Servlet with SSL</servlet-name>
        <url-pattern>/ssl/*</url-pattern>
    </servlet-mapping>

    <security-constraint>
        <web-resource-collection>
             <web-resource-name>Ferret Servlet with SSL</web-resource-name>
             <url-pattern>/ssl/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <servlet>
        <servlet-name>Ferret Servlet with Basic</servlet-name>
        <servlet-class>net.wasdev.samples.ferret.FerretServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Ferret Servlet with Basic</servlet-name>
        <url-pattern>/basic/*</url-pattern>
    </servlet-mapping>

    <security-constraint>
        <web-resource-collection>
             <web-resource-name>Ferret Servlet with Basic</web-resource-name>
             <url-pattern>/basic/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>user</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <login-config>
        <auth-method>BASIC</auth-method>
    </login-config>

    <security-role>
        <role-name>user</role-name>
    </security-role>

    <!-- Session timeout value in minutes. -->
    <session-config>
        <session-timeout>5</session-timeout>
    </session-config>

</web-app>
